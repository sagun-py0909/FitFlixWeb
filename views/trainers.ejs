
<div class="container py-5 mt-5">
  <div class="row mb-4">
    <div class="col">
      <h1 class="display-5 fw-bold">Personal Trainers</h1>
      <p class="lead text-muted">Expert trainers in <%= currentCity.name %> ready to guide your fitness journey</p>
    </div>
  </div>

  <div class="row g-4">
    <% if (trainers.length > 0) { %>
      <% trainers.forEach(trainer => { %>
        <div class="col-lg-4 col-md-6">
          <div class="trainer-card text-center h-100">
            <div class="trainer-image mb-3">
              <img src="<%= trainer.image %>" alt="<%= trainer.name %>" class="rounded-circle">
            </div>
            <h5 class="fw-bold mb-2"><%= trainer.name %></h5>
            <p class="text-fitflix fw-semibold mb-2"><%= trainer.specialization %></p>
            <p class="text-muted mb-3"><%= trainer.experience %> experience</p>
            <div class="mb-3">
              <i class="bi bi-star-fill text-warning"></i>
              <span class="fw-semibold"><%= trainer.rating %></span>
            </div>
            <div class="d-flex gap-2">
              <a href="/trainer/<%= trainer.id %>" class="btn btn-outline-fitflix flex-fill">View Profile</a>
              <a href="/book?trainer=<%= trainer.id %>" class="btn btn-fitflix flex-fill">Book Session</a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <i class="bi bi-person-check display-1 text-muted mb-3"></i>
        <h3>No trainers found in <%= currentCity.name %></h3>
        <p class="text-muted">Try selecting a different city or check back later.</p>
        <a href="/city-selection" class="btn btn-fitflix">Change City</a>
      </div>
    <% } %>
  </div>
</div>