
<!-- Hero Section with Background Animation -->
<section class="hero-section position-relative overflow-hidden">
  <div class="hero-bg-animation"></div>
  <div class="container position-relative">
    <div class="row min-vh-100 align-items-center">
      <div class="col-lg-6">
        <div class="hero-content">
          <h1 class="display-3 fw-bold text-white mb-4">
            Transform Your
            <span class="text-fitflix">Fitness Journey</span>
          </h1>
          <p class="lead text-white-50 mb-4">
            Discover premium gyms, expert trainers, and personalized workout plans. 
            Your path to a healthier, stronger you starts here.
          </p>
          <div class="d-flex flex-wrap gap-3">
            <a href="/gyms" class="btn btn-fitflix btn-lg px-4">
              <i class="bi bi-building me-2"></i>Find Gyms
            </a>
            <a href="/trainers" class="btn btn-outline-light btn-lg px-4">
              <i class="bi bi-person-check me-2"></i>Book Trainer
            </a>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="hero-image text-center">
          <img src="https://images.pexels.com/photos/1552242/pexels-photo-1552242.jpeg" 
               alt="Fitness Training" 
               class="img-fluid rounded-4 shadow-lg">
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row text-center mb-5">
      <div class="col-lg-8 mx-auto">
        <h2 class="display-5 fw-bold mb-3">Why Choose Fitflix?</h2>
        <p class="lead text-muted">Experience fitness like never before with our premium platform</p>
      </div>
    </div>
    
    <div class="row g-4">
      <div class="col-lg-4 col-md-6">
        <div class="feature-card text-center p-4 h-100">
          <div class="feature-icon mb-3">
            <i class="bi bi-building fs-1 text-fitflix"></i>
          </div>
          <h5 class="fw-bold mb-3">Premium Gyms</h5>
          <p class="text-muted">Access to top-rated fitness centers with state-of-the-art equipment and facilities.</p>
        </div>
      </div>
      
      <div class="col-lg-4 col-md-6">
        <div class="feature-card text-center p-4 h-100">
          <div class="feature-icon mb-3">
            <i class="bi bi-person-check fs-1 text-fitflix"></i>
          </div>
          <h5 class="fw-bold mb-3">Expert Trainers</h5>
          <p class="text-muted">Certified personal trainers to guide you through your fitness journey with personalized plans.</p>
        </div>
      </div>
      
      <div class="col-lg-4 col-md-6">
        <div class="feature-card text-center p-4 h-100">
          <div class="feature-icon mb-3">
            <i class="bi bi-calendar-check fs-1 text-fitflix"></i>
          </div>
          <h5 class="fw-bold mb-3">Flexible Booking</h5>
          <p class="text-muted">Book sessions, classes, and facilities with ease. Cancel or reschedule anytime.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Popular Gyms Section -->
<section class="py-5">
  <div class="container">
    <div class="row align-items-center mb-5">
      <div class="col">
        <h2 class="display-6 fw-bold mb-0">Popular Gyms in <%= currentCity.name %></h2>
      </div>
      <div class="col-auto">
        <a href="/gyms" class="btn btn-outline-dark">View All</a>
      </div>
    </div>
    
    <div class="row g-4">
      <% gyms.forEach(gym => { %>
        <div class="col-lg-4 col-md-6">
          <div class="gym-card h-100">
            <div class="gym-image">
              <img src="<%= gym.image %>" alt="<%= gym.name %>" class="card-img-top">
              <div class="gym-rating">
                <i class="bi bi-star-fill text-warning"></i>
                <span><%= gym.rating %></span>
              </div>
            </div>
            <div class="card-body">
              <h5 class="card-title fw-bold"><%= gym.name %></h5>
              <p class="text-muted mb-3">
                <i class="bi bi-geo-alt me-1"></i><%= gym.location %>
              </p>
              <a href="/book?gym=<%= gym.id %>" class="btn btn-fitflix w-100">Book Now</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<!-- Top Trainers Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center mb-5">
      <div class="col">
        <h2 class="display-6 fw-bold mb-0">Top Trainers</h2>
      </div>
      <div class="col-auto">
        <a href="/trainers" class="btn btn-outline-dark">View All</a>
      </div>
    </div>
    
    <div class="row g-4">
      <% trainers.forEach(trainer => { %>
        <div class="col-lg-4 col-md-6">
          <div class="trainer-card text-center h-100">
            <div class="trainer-image mb-3">
              <img src="<%= trainer.image %>" alt="<%= trainer.name %>" class="rounded-circle">
            </div>
            <h5 class="fw-bold mb-2"><%= trainer.name %></h5>
            <p class="text-fitflix fw-semibold mb-2"><%= trainer.specialization %></p>
            <p class="text-muted mb-3"><%= trainer.experience %> experience</p>
            <div class="mb-3">
              <i class="bi bi-star-fill text-warning"></i>
              <span class="fw-semibold"><%= trainer.rating %></span>
            </div>
            <a href="/trainer/<%= trainer.id %>" class="btn btn-outline-fitflix">View Profile</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h2 class="display-5 fw-bold text-white mb-4">Ready to Start Your Fitness Journey?</h2>
        <p class="lead text-white-50 mb-4">
          Join thousands of fitness enthusiasts who have transformed their lives with Fitflix.
        </p>
        <a href="/memberships" class="btn btn-light btn-lg px-5">
          <i class="bi bi-rocket-takeoff me-2"></i>Get Started Today
        </a>
      </div>
    </div>
  </div>
</section>