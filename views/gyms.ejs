
<div class="container py-5 mt-5">
  <div class="row mb-4">
    <div class="col">
      <h1 class="display-5 fw-bold">Gyms & Fitness Centers</h1>
      <p class="lead text-muted">Discover premium fitness facilities in <%= currentCity.name %></p>
    </div>
  </div>

  <div class="row g-4">
    <% if (gyms.length > 0) { %>
      <% gyms.forEach(gym => { %>
        <div class="col-lg-6 col-xl-4">
          <div class="gym-card h-100">
            <div class="gym-image">
              <img src="<%= gym.image %>" alt="<%= gym.name %>" class="card-img-top">
              <div class="gym-rating">
                <i class="bi bi-star-fill text-warning"></i>
                <span><%= gym.rating %></span>
              </div>
            </div>
            <div class="card-body">
              <h5 class="card-title fw-bold"><%= gym.name %></h5>
              <p class="text-muted mb-3">
                <i class="bi bi-geo-alt me-1"></i><%= gym.location %>
              </p>
              <div class="d-flex gap-2">
                <a href="/book?gym=<%= gym.id %>" class="btn btn-fitflix flex-fill">Book Now</a>
                <button class="btn btn-outline-secondary">
                  <i class="bi bi-heart"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center py-5">
        <i class="bi bi-building display-1 text-muted mb-3"></i>
        <h3>No gyms found in <%= currentCity.name %></h3>
        <p class="text-muted">Try selecting a different city or check back later.</p>
        <a href="/city-selection" class="btn btn-fitflix">Change City</a>
      </div>
    <% } %>
  </div>
</div>