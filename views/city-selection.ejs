
<div class="container py-5 mt-5">
  <div class="row mb-5">
    <div class="col-lg-8 mx-auto text-center">
      <h1 class="display-5 fw-bold mb-3">Select Your City</h1>
      <p class="lead text-muted">Choose your city to discover gyms and trainers near you</p>
    </div>
  </div>

  <div class="row g-4 justify-content-center">
    <% cities.forEach(city => { %>
      <div class="col-lg-4 col-md-6">
        <form method="POST" action="/select-city">
          <input type="hidden" name="cityId" value="<%= city.id %>">
          <input type="hidden" name="returnUrl" value="/">
          <button type="submit" class="city-card w-100 <%= city.id === currentCity.id ? 'active' : '' %>">
            <div class="city-icon mb-3">
              <i class="bi bi-building fs-1"></i>
            </div>
            <h5 class="fw-bold mb-2"><%= city.name %></h5>
            <p class="text-muted mb-0"><%= city.state %></p>
            <% if (city.id === currentCity.id) { %>
              <div class="current-city-badge">
                <i class="bi bi-check-circle-fill"></i> Current
              </div>
            <% } %>
          </button>
        </form>
      </div>
    <% }); %>
  </div>
</div>